<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_transparent"
    tools:context=".PsychologistActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_psychologist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/psychologist_item" />

    <ImageView
        android:id="@+id/imageViewEmptyPsychologist"
        android:layout_width="227dp"
        android:layout_height="236dp"
        android:layout_marginTop="192dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/undraw_no_data_re_kwbl"
        tools:visibility="gone" />

    <TextView
        android:id="@+id/textViewEmptyPsychologist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center_horizontal"
        android:text="@string/psychologist_empty"
        android:textColor="@color/blue_dark_text_main"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/imageViewEmptyPsychologist"
        app:layout_constraintStart_toStartOf="@+id/imageViewEmptyPsychologist"
        app:layout_constraintTop_toBottomOf="@+id/imageViewEmptyPsychologist"
        tools:visibility="gone" />

    <ProgressBar
        android:id="@+id/progressBar_psychologist"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>